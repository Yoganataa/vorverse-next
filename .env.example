# Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id
API_HASH=your_api_hash

# Database Configuration
DATABASE_URL=sqlite:///./data/bot_database.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# Download Configuration
DOWNLOAD_PATH=./downloads
MAX_CONCURRENT_DOWNLOADS=5
MAX_FILE_SIZE_MB=500

# TikTok Configuration (JoeanAmier/TikTokDownloader Parameters)
TIKTOK_COOKIE_FILE=./data/cookies/tiktok.txt
TIKTOK_ROOT=./downloads/tiktok
TIKTOK_FOLDER_NAME=TikTok
TIKTOK_NAME_FORMAT={create}_{desc}_{id}
TIKTOK_DATE_FORMAT=%Y-%m-%d %H.%M.%S
TIKTOK_SPLIT=-
TIKTOK_FOLDER_MODE=False
TIKTOK_MUSIC=False
TIKTOK_STORAGE_FORMAT=
TIKTOK_COOKIE_FORMAT=
TIKTOK_DYNAMIC_COVER=False
TIKTOK_ORIGINAL_COVER=False
TIKTOK_PROXIES={}
TIKTOK_DOWNLOAD=True
TIKTOK_MAX_SIZE=104857600
TIKTOK_CHUNK=1048576
TIKTOK_MAX_RETRY=5
TIKTOK_RECORD_DATA=True
TIKTOK_RECORD_FORMAT=
TIKTOK_OWNER_URL=https://github.com/JoeanAmier/TikTokDownloader
TIKTOK_REPOSITORY_URL=https://github.com/JoeanAmier/TikTokDownloader
TIKTOK_COLOUR=True
TIKTOK_LANGUAGE=zh

# TikTok Browser Info (JSON String)
TIKTOK_BROWSER_INFO={"headers": {"User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"}}

# Instagram Configuration
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=
INSTAGRAM_SESSION_FILE=./data/instagram_session
INSTAGRAM_DOWNLOAD_VIDEOS=True
INSTAGRAM_DOWNLOAD_VIDEO_THUMBNAILS=False
INSTAGRAM_DOWNLOAD_GEOTAGS=False
INSTAGRAM_DOWNLOAD_COMMENTS=False
INSTAGRAM_SAVE_METADATA=False

# YT-DLP Configuration
YTDLP_FORMAT=best[height<=720]
YTDLP_EXTRACT_FLAT=False
YTDLP_WRITE_DESCRIPTION=False
YTDLP_WRITE_INFO_JSON=False
YTDLP_WRITE_THUMBNAIL=False

# Admin Configuration (Comma-separated user IDs)
ADMIN_IDS=123456789,987654321

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log